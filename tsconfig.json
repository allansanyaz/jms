{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
        "es6"
      ],
      "paths": {
        "@/*": ["./src/*"]
      },
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "preserve",
      "incremental": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "plugins": [
        {
          "name": "next"
        }
      ]
    },
    "include": [
      "src",
      "src/lib/types/custom.d.ts",
      ".next/types/**/*.ts",
      "src/middleware.ts"
    ],
    "exclude": [
      "node_modules",
      "src/styles"
    ]
  }
  